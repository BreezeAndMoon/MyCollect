<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <com.joint.jointpolice.widget.RecyScollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    ></com.youth.banner.Banner>
                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/marqueeView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:background="#80000000"
                    app:mvAnimDuration="1000"
                    app:mvDirection="bottom_to_top"
                    app:mvInterval="3000"
                    app:mvTextColor="@color/white"
                    app:mvTextSize="14sp"
                    app:mvGravity="left"
                    android:paddingLeft="@dimen/bdp_5"
                    app:mvSingleLine="true"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_collect_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bdp_15"
                android:layout_marginRight="@dimen/bdp_15"
                android:layout_marginTop="@dimen/bdp_10"
                android:background="@color/white"
                android:paddingBottom="@dimen/bdp_10"
                android:paddingLeft="@dimen/bdp_5"
                android:paddingTop="@dimen/bdp_10"
                android:textColor="@color/textPrimary2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bdp_15"
                android:layout_marginRight="@dimen/bdp_15"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_person_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_person_128"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textPrimary2" />

                <TextView
                    android:id="@+id/tv_house_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_house_128"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textPrimary2" />

                <TextView
                    android:id="@+id/tv_unit_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_unit_128"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textPrimary2" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/bdp_20"
                android:layout_marginRight="@dimen/bdp_20"
                android:layout_marginTop="@dimen/bdp_15"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="2">

                <LinearLayout
                    android:id="@+id/layout_person"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/bdp_5"
                    android:layout_marginRight="@dimen/bdp_5"
                    android:layout_rowWeight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="64dp"-->
                    <!--android:layout_height="64dp"-->
                    <!--android:src="@drawable/ic_person" />-->

                    <TextView
                        android:id="@+id/tv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bdp_10"
                        android:drawableTop="@drawable/ic_person_128"
                        android:text="实有人口"
                        android:textColor="@color/textPrimary2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_house"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/bdp_5"
                    android:layout_rowWeight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="64dp"-->
                    <!--android:layout_height="64dp"-->
                    <!--android:src="@drawable/ic_house_add" />-->

                    <TextView
                        android:id="@+id/tv_house"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bdp_10"
                        android:drawableTop="@drawable/ic_house_128"
                        android:gravity="center"
                        android:text="实有房屋"
                        android:textColor="@color/textPrimary2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="@dimen/bdp_5"
                    android:layout_rowWeight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="64dp"-->
                    <!--android:layout_height="64dp"-->
                    <!--android:src="@drawable/ic_unit" />-->

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bdp_10"
                        android:drawableTop="@drawable/ic_unit_128"
                        android:gravity="center"
                        android:text="实有单位" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_more"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="64dp"-->
                    <!--android:layout_height="64dp"-->
                    <!--android:src="@drawable/ic_case" />-->

                    <TextView
                        android:id="@+id/tv_doorplate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bdp_10"
                        android:drawableTop="@drawable/ic_more_128"
                        android:gravity="center"
                        android:text="更多" />
                </LinearLayout>


            </GridLayout>
        </LinearLayout>
    </com.joint.jointpolice.widget.RecyScollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bdp_5"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_main64"
            android:gravity="center"
            android:text="主页"
            android:textColor="@color/textPrimary2" />

        <View
            android:layout_width="@dimen/bdp_0_5"
            android:layout_height="@dimen/bdp_30"
            android:layout_gravity="center"
            android:background="@color/fe" />

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_my64"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/textPrimary2" />
    </LinearLayout>
</LinearLayout>
