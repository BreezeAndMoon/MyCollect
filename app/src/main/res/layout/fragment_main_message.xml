<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/bdp_45">

        <com.joint.jointpolice.widget.tablayout.SlidingTabLayout
            android:id="@+id/tablayout_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bdp_30"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            app:tl_indicator_color="@color/colorGray"
            app:tl_indicator_height="@dimen/bdp_3"
            app:tl_indicator_width="@dimen/bdp_20"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="@color/white"
            app:tl_textsize="@dimen/text_size_13">


        </com.joint.jointpolice.widget.tablayout.SlidingTabLayout>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

</LinearLayout>
