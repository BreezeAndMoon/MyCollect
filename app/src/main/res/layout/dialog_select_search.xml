<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">
<LinearLayout
    android:background="@color/white"
    android:id="@+id/layout"
    android:layout_margin="@dimen/bdp_16"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/bdp_16"
    android:paddingRight="@dimen/bdp_16"
    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/bdp_15"
        android:layout_marginBottom="@dimen/bdp_15"
        android:text="居住事由"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_font_size_huge" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
    <TextView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignRight="@+id/layout"
        android:layout_alignTop="@+id/layout"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="-16dp"
        android:background="@drawable/ic_cancel" />

</RelativeLayout>
