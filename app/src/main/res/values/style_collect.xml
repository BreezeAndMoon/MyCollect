<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClickTextView">
        <item name="android:paddingBottom">@dimen/bdp_15</item>
        <item name="android:paddingTop">@dimen/bdp_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary2</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClickCommonLinearLayout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bdp_10</item>
        <item name="android:layout_marginBottom">@dimen/bdp_30</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TitleTextView">
        <item name="android:paddingLeft">@dimen/bdp_8</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:paddingBottom">@dimen/bdp_12</item>
        <item name="android:paddingTop">@dimen/bdp_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RedTitleTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingBottom">@dimen/bdp_5</item>
        <item name="android:paddingTop">@dimen/bdp_15</item>
<item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
